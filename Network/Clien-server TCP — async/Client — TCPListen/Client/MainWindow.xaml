<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"  Width="150">
               <Label HorizontalAlignment="Center"> Sign up</Label>
               <TextBox Name="login" Background="Beige" Margin="1"></TextBox>
            <TextBox Name="password" Background="Beige"  Margin="1"></TextBox>
            <Button Click="Button_Click">Connect</Button>
        </StackPanel>
        
        
    </Grid>
</Window>
